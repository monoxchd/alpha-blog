<% obj.each do |product| %>
  <div class="row">
    <div class="col-lg-3">
      <%= image_tag product.image.url(:big) %>
    </div>
    <div class="col-lg-7">
      <h4><%= product.name %></h4>
      <div class="description">
        <p><%= product.description %></p>
      </div>
    </div>
    <div class="col-lg-2">
      <button type="button" class="btn btn-danger">Comprar</button>
    </div>
    <div class="col-lg-9">
      <%= image_tag product.image.url(:thumb), title: "#{image_tag product.image.url(:tooltip), class: 'img-thumbnail'}", data: {toggle: "tooltip", placement: "top", html: "true"} %>
    </div>
  </div>
<% end %>